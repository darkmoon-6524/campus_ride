<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="/public/css/home.css">
  <meta charset="UTF-8">
  <title>Home Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #333; padding: 10px;">
    <a class="navbar-brand" href="/login" style="color: white; margin-left: 10px;">CampusRide</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01"
      aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/" style="color: white;">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/location" style="color: white;">Locations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#cta" style="color: white;">About & Contact Us</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="profile-card">
    <!-- Profile Card Content -->
    <div class="profile-info">
      <img class="profile-picture" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="Profile Image">
    </div>
    <a href="/editprofile" class="btn btn-primary">Edit Profile</a>
  </div>

  <!-- Selectors -->
  <div class="selectors">
    <select id="location-selector">
      <option value="">Select Location</option>
      <option value="location1">Location 1</option>
      <option value="location2">Location 2</option>
      <option value="location3">Location 3</option>
      <option value="location4">Location 4</option>
      <option value="location5">Location 5</option>
    </select>

    <hr class="my-2">

    <div class="price-selector">
      <select id="price-per-hour-selector">
        <option value="">Select Price Per Hour</option>
        <option value="price1">Price 1</option>
        <option value="price2">Price 2</option>
        <option value="price3">Price 3</option>
        <option value="price4">Price 4</option>
        <option value="price5">Price 5</option>
        <option value="price6">Price 6</option>
      </select>
    </div>
  </div>

  <script>
    // Show the price selector when a location is selected
    document.getElementById("location-selector").addEventListener("change", function () {
      var priceSelector = document.querySelector(".price-selector");
      if (this.value === "") {
        priceSelector.style.display = "none";
      } else {
        priceSelector.style.display = "block";
      }
    });
  </script>
  <div class="availability-button" style="display: none;">
    <a href="/availability" class="btn btn-primary">Check Availability</a>
  </div>
  <script>
    // Show the availability button when location and price are selected
    var locationSelector = document.getElementById("location-selector");
    var priceSelector = document.getElementById("price-per-hour-selector");
    var availabilityButton = document.querySelector(".availability-button");

    locationSelector.addEventListener("change", checkSelectors);
    priceSelector.addEventListener("change", checkSelectors);

    function checkSelectors() {
      if (locationSelector.value && priceSelector.value) {
        availabilityButton.style.display = "block";
      } else {
        availabilityButton.style.display = "none";
      }
    }
  </script>
</body>

</html>